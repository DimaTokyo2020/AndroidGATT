<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">


    <Button
        android:id="@+id/chooseServerBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/server"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/chooseClientBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/client"

        app:layout_constraintTop_toBottomOf="@+id/chooseServerBTN"
        tools:layout_editor_absoluteX="-110dp" />

    <Button
        android:id="@+id/testClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="test client"
        app:layout_constraintTop_toBottomOf="@+id/chooseClientBTN"
        tools:layout_editor_absoluteX="-110dp" />

    <Button
        android:id="@+id/testServer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test server"
        app:layout_constraintTop_toBottomOf="@+id/testClient"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/testSendBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Send"
        app:layout_constraintTop_toBottomOf="@+id/testServer"
        />


</androidx.constraintlayout.widget.ConstraintLayout>